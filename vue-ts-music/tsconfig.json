{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "lib": ["DOM", "ESNext"],
        "allowJs": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_moduels/"
    ]
}