{
    "include": ["src/*", "src/**/*", "vue-shims.d.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "types": ["node"],
      "typeRoots": [
        "node_modules/@types"
      ],
      "strict": true,
      "strictPropertyInitialization": false,
      "jsx": "preserve",
      "jsxFactory": "h",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "strictFunctionTypes": false,
      "allowJs": true,
      "module": "esnext",
      "target": "es5",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "lib": [
        "dom",
        "es5",
        "es6",
        "es7",
        "es2015.promise"
      ],
      "outDir": "tsOut",
      "sourceMap": true,
      "pretty": true
    }
  }
  