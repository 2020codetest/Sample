{
    "compilerOptions": {
        "target": "ES5",
        "allowJs": false,
        "alwaysStrict": true,
        "jsx": "react",
        "jsxFactory": "React.createElement",
        "lib": ["ESNext", "DOM"],
        "module": "CommonJS",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
}